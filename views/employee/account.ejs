        function deleteEmployee(account) {
            if(account.username == 'Admin'){
                Swal.fire("No Permission!", "You do not have permission to delete an admin account.", "error");
            }else{
                Swal.fire({
                title: "Do you want to Delete \n" + account.username + '?',
                showCancelButton: true,
                confirmButtonText: "Delete",
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    // console.log(account.ID)
                    // ทำการส่งข้อมูลไปที่เซิร์ฟเวอร์ Node.js

                    fetch('/employee/account/delete', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ username: account.username })
                    })
                    .then(response => {
                        if (response.ok) {
                            return response.text();
                        } else {
                            throw new Error('Failed to delete account');
                        }
                    })                    
                    .then(data => {

                            console.log(data); // ให้ดูข้อมูลที่ได้รับใน Console
                            Swal.fire({
                                title: "Delete Success",
                                icon: "success",
                                confirmButtonText: "OK"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                     window.location.reload();
                                }
                            });
                        
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire("Error!", "An error occurred while deleting.", "error");
                    });
                }
            });
