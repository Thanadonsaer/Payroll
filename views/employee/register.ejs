            </div>
        </div>
    </nav>

    <div class="container mt-4">

        <div class="card">
            
            <div class="card-header">
                <h1 class="text-center">Register Admin</h1>
            </div>
            <!-- เพิ่ม attribute onsubmit ใน tag <form> -->
            <form action="/auth/register" method="post" onsubmit="return validateForm()">

                <div class="card-body p-5">

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="Username" name="Username" autofocus required>
                        <label for="Username">Username</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Password"
                            oninput="validatePassword()" required>
                        <div class="mt-1" id="passwordStrength" style="color: red;"></div>
                        <label for="Password">Password</label>

                    </div>
                    <div class="form-floating mt-3">
                        <input type="password" class="form-control" id="Confirm_Password" name="Confirm_Password"
                            oninput="confirmPassword()" placeholder="Confirm Password" required>
                        <div class="mt-1" id="confirmpassword" style="color: red;"></div>
                        <label for="Password">Confirm Password</label>
                    </div>
                    <div class="d-grid mt-3">
                        <button class="btn btn-success" type="submit">Submit</button>
                    </div>

                </div>
                <!-- <div class="card-footer text-end">
                
            </div> -->
            </form>


        </div>
        <% if(messages.error){ %>
            <div class="alert alert-danger" style=" width: 100%; min-width: 600px;" role="alert">
                <%= messages.error %>
            </div>
            <% } %>
        <% if(messages.success){ %>
            <div class="alert alert-success" style=" width: 100%; min-width: 600px;" role="alert">
                <%= messages.success %>
            </div>
            <% } %>
    </div>

    <script>
        function validateForm() {
            var password = document.getElementById("Password").value;
            var confirmPassword = document.getElementById("Confirm_Password").value;

            if (password.length < 8 || confirmPassword.length < 8) {
                alert("รหัสผ่านขั้นต่ำ 8 ตัวอักษร");
                return false;
            }

            if (password != confirmPassword) {
                // alert("รหัสผ่านและการยืนยันรหัสผ่านไม่ตรงกัน");
                document.getElementById("Confirm_Password").focus();
                return false;
            }

            return true;
        }
        function validatePassword() {
            var password = document.getElementById("Password").value;

            // ตรวจสอบความยาวของรหัสผ่าน
            if (password.length < 8 && password) {
                document.getElementById("passwordStrength").innerHTML = "รหัสผ่านต้องมีความยาวอย่างน้อย 8 ตัว";
            } else {
                document.getElementById("passwordStrength").innerHTML = "";
            }

            // ตรวจสอบความปลอดภัยอื่น ๆ ตามที่คุณต้องการ เช่น ต้องมีตัวเลข, ตัวอักษรใหญ่, ตัวอักษรเล็ก
            var hasNumber = /\d/.test(password);
            var hasUppercase = /[A-Z]/.test(password);
            var hasLowercase = /[a-z]/.test(password);

            if ((!hasNumber || !hasUppercase || !hasLowercase) && password) {
                document.getElementById("passwordStrength").innerHTML += "รหัสผ่านต้องประกอบด้วยตัวเลข, ตัวอักษรใหญ่, และตัวอักษรเล็ก";
            }
        }
        function confirmPassword() {
            var password = document.getElementById("Password").value;
            var confirmPassword = document.getElementById("Confirm_Password").value;
            if (password != confirmPassword && confirmPassword) {
                document.getElementById("confirmpassword").innerHTML = "รหัสผ่านและการยืนยันรหัสผ่านไม่ตรงกัน";
            } else {
                document.getElementById("confirmpassword").innerHTML = " ";
            }

        }
    </script>

